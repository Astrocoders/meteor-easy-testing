{
  "name": "astroman",
  "version": "1.2.1",
  "description": "Rapid scaffolding for React Native, Meteor and React Boilerplate projects",
  "repository": {
    "url": "git@github.com:Astrocoders/astroman.git",
    "type": "git"
  },
  "author": "Gabriel Rubens <grsabreu@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prepublish": "rm -rf dist && babel lib/ --out-dir dist/ --ignore=**/tests",
    "test": "xo && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "flow": "flow",
    "release:minor": "npm version minor && git push --tags && git push origin develop && release",
    "lint": "xo"
  },
  "bin": {
    "astroman": "dist/index.js"
  },
  "engines": {
    "node": ">=4"
  },
  "dependencies": {
    "colors": "^1.1.2",
    "common-tags": "^1.4.0",
    "find-config": "^1.0.0",
    "jscodeshift": "^0.3.30",
    "lodash": "^4.16.4",
    "mkdirp": "^0.5.1",
    "prettier": "^0.22.0",
    "replace": "^0.3.0",
    "rimraf": "^2.5.4",
    "yargs": "^6.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-plugin-module-resolver": "^2.7.0",
    "babel-preset-es2015": "^6.24.1",
    "eslint-import-resolver-babel-module": "^3.0.0",
    "jest": "^19.0.2",
    "xo": "^0.18.2"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-flow-strip-types",
      [
        "module-resolver",
        {
          "root": [
            "./lib"
          ],
          "alias": {
            "~": "./lib"
          }
        }
      ]
    ]
  },
  "jest": {
    "rootDir": "./lib",
    "verbose": true,
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/test_artifacts/"
    ]
  },
  "xo": {
    "semicolon": false,
    "space": true,
    "envs": ["node", "jest"],
    "filename-case": "camelCase",
    "settings": {
      "import/resolver": {
        "babel-module": {}
      }
    }
  }
}
