{
  "name": "astroman",
  "version": "0.1.3",
  "description": "Rapid scaffolding for React Native, Meteor and React Boilerplate projects",
  "repository": {
    "url": "git@github.com:Astrocoders/astroman.git",
    "type": "git"
  },
  "author": "Gabriel Rubens <grsabreu@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prepublish": "rm -rf dist && babel lib/ --out-dir dist/ --ignore=**/tests",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "flow": "flow"
  },
  "bin": {
    "astroman": "dist/index.js"
  },
  "engines": {
    "node": ">=4"
  },
  "dependencies": {
    "colors": "^1.1.2",
    "find-config": "^1.0.0",
    "lodash": "^4.16.4",
    "yargs": "^6.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.0",
    "babel-plugin-transform-flow-strip-types": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "flow-bin": "^0.33.0",
    "jest": "^16.0.2"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-flow-strip-types"
    ]
  },
  "jest": {
    "rootDir": "./lib",
    "verbose": true,
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/test_artifacts/"
    ]
  }
}
